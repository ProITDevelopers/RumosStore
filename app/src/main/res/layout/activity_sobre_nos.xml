<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SobreNosActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        android:background="@color/black">
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/toolbarDivider"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBotaoLogin" />



    <ScrollView
        android:padding="10dp"
        android:layout_below="@+id/toolbarDivider"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_weight=".7"
                        android:padding="2dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/logo_media_rumo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/media_social_fb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_facebook" />

                        <ImageView
                            android:id="@+id/media_social_inst"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginStart="18dp"
                            android:src="@drawable/ic_instagram" />

                        <ImageView
                            android:id="@+id/media_social_linked"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/linkedin" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="15dp"
                        android:background="@color/colorBotaoLogin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="8dp"
                            android:text="Mercado" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/mercado_social_fb"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_facebook" />

                            <ImageView
                                android:id="@+id/mercado_social_inst"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="18dp"
                                android:layout_marginStart="18dp"
                                android:src="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/mercado_social_linked"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="18dp"
                                android:src="@drawable/linkedin" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_margin="15dp"
                            android:background="@color/colorBotaoLogin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="8dp"
                            android:text="Vanguarda" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/vanguarda_social_fb"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_facebook" />

                            <ImageView
                                android:id="@+id/vanguarda_social_inst"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="18dp"
                                android:layout_marginStart="18dp"
                                android:src="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/vanguarda_social_linked"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="18dp"
                                android:src="@drawable/linkedin" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_margin="15dp"
                            android:background="@color/colorBotaoLogin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_margin="8dp"
                            android:text="Rumo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rumo_social_fb"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_facebook" />

                            <ImageView
                                android:id="@+id/rumo_social_inst"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="18dp"
                                android:layout_marginStart="18dp"
                                android:src="@drawable/ic_instagram" />

                            <ImageView
                                android:id="@+id/rumo_social_linked"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="18dp"
                                android:src="@drawable/linkedin" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_margin="15dp"
                            android:background="@color/colorBotaoLogin" />

                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>