<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_preta_nova"
    tools:context=".RegistroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/relLayoutBar">


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logotipo_mediarumo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="44dp"
                        android:background="@drawable/borda_arredondada"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/liUsuarioNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ic_user"
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/usuario_icone" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/editTextNomeRegistro"
                            android:layout_width="230dp"
                            android:background="@drawable/borda_lateral"
                            android:layout_height="44dp"
                            android:textCursorDrawable="@drawable/cor_cursor"
                            android:textColor="@color/cor_principal"
                            android:textColorHint="@color/cor_principal"
                            android:layout_marginLeft="4dp"
                            android:hint="@string/hit_nome"
                            android:paddingLeft="10dp"
                            android:inputType="textCapSentences" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/borda_arredondada"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/liEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:id="@+id/ic_email"
                                android:src="@drawable/envelope_dourado" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/editTextEmailRegistro"
                            android:layout_width="230dp"
                            android:background="@drawable/borda_lateral"
                            android:layout_height="44dp"
                            android:textColor="@color/cor_principal"
                            android:textColorHint="@color/cor_principal"
                            android:textCursorDrawable="@drawable/cor_cursor"
                            android:layout_marginLeft="4dp"
                            android:hint="@string/hit_btn_entrar_email"
                            android:paddingLeft="10dp"
                            android:inputType="textEmailAddress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/borda_arredondada"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/liPass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:id="@+id/ic_pass"
                                android:src="@drawable/cadeado_dourado" />

                        </LinearLayout>

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/editTextPassRegistro"
                            android:layout_width="230dp"
                            android:background="@drawable/borda_lateral"
                            android:layout_height="44dp"
                            android:textCursorDrawable="@drawable/cor_cursor"
                            android:textColor="@color/cor_principal"
                            android:textColorHint="@color/cor_principal"
                            android:layout_marginLeft="4dp"
                            android:hint="@string/hit_senha"
                            android:paddingLeft="10dp"
                            android:inputType="textPassword"
                            app:tint_color="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/borda_arredondada"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/liPass2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:id="@+id/ic_pass2"
                                android:src="@drawable/cadeado_dourado" />

                        </LinearLayout>

                        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                            android:id="@+id/editTextPassRegistro2"
                            android:layout_width="230dp"
                            android:background="@drawable/borda_lateral"
                            android:layout_height="44dp"
                            android:textColor="@color/cor_principal"
                            android:textColorHint="@color/cor_principal"
                            android:textCursorDrawable="@drawable/cor_cursor"
                            android:layout_marginLeft="4dp"
                            android:hint="@string/hit_senha_conf"
                            android:paddingLeft="10dp"
                            android:inputType="textPassword"
                            app:tint_color="@android:color/white" />

                    </LinearLayout>



                    <Button
                        android:id="@+id/btnRegistrar"
                        android:layout_width="270dp"
                        android:layout_marginTop="33dp"
                        android:text="@string/hit_btn_registrar"
                        android:textColor="@color/cor_borda"
                        android:background="@drawable/borda_arredondada_login"
                        android:layout_height="44dp" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relLayoutBar"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btnLoginInicial"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margem_cima"
                android:layout_height="wrap_content"
                android:text="@string/hit_ja_tem_conta"
                android:textColor="@color/cor_principal"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/activity_sem_internet" />


</RelativeLayout>