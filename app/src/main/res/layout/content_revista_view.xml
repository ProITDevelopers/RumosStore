<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdf_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.github.barteksc.pdfviewer.PDFView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:id="@+id/linearProgresso"
        android:gravity="center"
        android:layout_height="match_parent">

        <io.netopen.hotbitmapgg.library.view.RingProgressBar
            android:id="@+id/progressbar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_media_rumo"
            app:max="100"
            app:ringColor="@android:color/transparent"
            app:ringProgressColor="@android:color/transparent"
            app:textColor="@android:color/black"
            app:ringWidth="10dp"
            style="FILL"
            app:textSize="16dp"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progress_bar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_30"
            app:indicatorColor="@color/colormedia"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>






</RelativeLayout>
