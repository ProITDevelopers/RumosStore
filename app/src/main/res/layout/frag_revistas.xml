<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F0F0F0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout"
        android:layout_margin="11dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextSwitcher
                    android:id="@+id/title"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextSwitcher>

                <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
                    android:id="@+id/coverflow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:coverHeight="100dp"
                    app:coverWidth="70dp"
                    app:maxScaleFactor="1.5"
                    app:reflectionGap="0px"
                    app:rotationThreshold="0.5"
                    app:scalingThreshold="0.5"
                    app:spacing="0.6" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextSwitcher
                    android:id="@+id/title2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextSwitcher>

                <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
                    android:id="@+id/coverflow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:coverHeight="100dp"
                    app:coverWidth="70dp"
                    app:maxScaleFactor="1.5"
                    app:reflectionGap="0px"
                    app:rotationThreshold="0.5"
                    app:scalingThreshold="0.5"
                    app:spacing="0.6" />




            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextSwitcher
                    android:id="@+id/title3"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextSwitcher>

                <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
                    android:id="@+id/coverflow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:coverHeight="100dp"
                    app:coverWidth="70dp"
                    app:maxScaleFactor="1.5"
                    app:reflectionGap="0px"
                    app:rotationThreshold="0.5"
                    app:scalingThreshold="0.5"
                    app:spacing="0.6" />




            </LinearLayout>

        </android.support.v7.widget.CardView>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progress"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            app:indicatorColor="@color/colormedia"
            app:indicatorName="BallPulseIndicator" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center"
            android:text="Carregando..."/>



    </LinearLayout>

    <include layout="@layout/activity_sem_internet" />

</RelativeLayout>