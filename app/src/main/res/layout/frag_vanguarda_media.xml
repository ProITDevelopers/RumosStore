<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="proitappsolutions.com.rumosstore.fragmentos.FragVanguardaMedia"
    tools:showIn="@layout/activity_multimedia">

    <RelativeLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <WebView
            android:id="@+id/webViewVanguarda"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </WebView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:id="@+id/linearProgresso"
            android:gravity="center"
            android:layout_height="match_parent">

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/progressbar_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:max="100"
                app:ringColor="@color/colorBotaoLogin"
                app:ringProgressColor="@android:color/white"
                app:textColor="@android:color/black"
                app:ringWidth="5dp"
                style="FILL"
                app:textSize="20dp"/>



            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/progress"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_30"
                app:indicatorColor="@color/colormedia"
                app:indicatorName="BallPulseIndicator" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>