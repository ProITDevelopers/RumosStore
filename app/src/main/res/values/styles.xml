<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/cor_preta_nova</item>
        <item name="colorAccent">@color/colorCima</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#b3b3ad</item>
        <item name="colorControlActivated">@color/colorBotaoLogin</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBotaoLogin</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorBotaoLogin</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="progressBarAmarela" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorBotaoLogin</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="progressDourada" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

    <style name="estiloToolbar"  parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/sansa_pro</item>
    </style>

</resources>
