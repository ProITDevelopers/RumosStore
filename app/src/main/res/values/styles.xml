<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorCima</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/colorBotaoLogin</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#b3b3ad</item>
        <item name="colorControlActivated">@color/colorBotaoLogin</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBotaoLogin</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorBotaoLogin</item>
    </style>

</resources>
